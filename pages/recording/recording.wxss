#myProgress {
    width: 100%;
    background-color: grey;
}
#myBar {
    height: 30px;
    background-color: green;
}

.timer {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.timer-content {
  width: 300px;
  height: 200px;
  position: relative;
}

.time {
  width: 100%;
  /* line-height: 1em; */
  position: absolute;
  top: 45%;
  text-align: center;
  left: 0;
  display: block;
}

.btn {
  position:relative;
display:block;
margin-left:auto;
margin-right:auto;
padding-left:14px;
padding-right:14px;
box-sizing:border-box;
font-size:18px;
text-align:center;
text-decoration:none;
line-height:2.55555556;
border-radius:5px;
-webkit-tap-highlight-color:transparent;
overflow:hidden;
color:#000000;
background-color:#F8F8F8;

}

.button-md {
  width:50%;
  margin: 20rpx;
  font-family: muli;
  opacity: 0%;
  border: 1px solid #FF9300;
  color: #FF9300;
}

.btn-primary {
  margin-top:120rpx;
opacity:0%;
font-family:muli;
color:white;
background-color:#ab00ce;
}

.button-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topics {
  width: 100%;
  display:flex;
  justify-content: center;
  padding: 10rpx;
}

.page-container {
  position:relative;
  height: 100vh;
  background-color: #F6F6F6;
}