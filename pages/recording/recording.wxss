#myProgress {
    width: 100%;
    background-color: grey;
}
#myBar {
    height: 30px;
    background-color: green;
}

.timer {
  display: flex;
  width: 100%;
  justify-content: center;
  align-items: center;
}

.timer-content {
  width: 300px;
  height: 200px;
  position: relative;
}

.time {
  width: 100%;
  /* line-height: 1em; */
  position: absolute;
  top: 45%;
  text-align: center;
  left: 0;
  display: block;
}

.button-md {
  width:50%;
  margin: 20rpx;
  font-family: muli;
  opacity: 0%;
  border: 1px solid #FF9300;
  color: #FF9300;
}

.button-box {
  width: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
}

.topics {
  width: 100%;
  display:flex;
  justify-content: center;
  padding: 10rpx;
}

.page-container {
  position:relative;
  height: 100vh;
  background-color: #F6F6F6;
}