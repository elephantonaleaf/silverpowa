/* CSS design by @jofpin */

.body {
  background-color: #f6f6f6;
  padding: 0.23em;
  height: 100vh;
}


.user-profile {
  margin: auto;
	width: 100%; 
  border-radius: .3em;
  display: block;
  text-align: center;
}

.user-profile  .username {
  margin: auto;
  font-size:30px; 
  color:#AB00CE;
  font-weight: bold;
}


.user-profile > image.avatar {
	padding: .7em;
  margin-left: .3em;
  margin-top: .3em;
  height: 6.23em;
  width: 6.23em;
  border-radius: 50%;
}

.user-profile  .bio {
  margin-top: 25px;
}
.user-profile .data {
	margin: 0 auto;
	padding: 7px;
  display: flex;
  color: #777;
  border-radius: 0 0 .3em .3em;
  justify-content: space-evenly;

}

.topnav {
  overflow: hidden;
  background-color: #e9e9e9;
}

.topnav a {
  float: left;
  display: block;
  color: black;
  text-align: center;
  padding: 14px 16px;
  text-decoration: none;
  font-size: 17px;
}

.topnav a:hover {
  background-color: #ddd;
  color: black;
}

.topnav a.active {
  background-color: #2196F3;
  color: white;
}

.topnav .search-container {
  float: right;
}

.topnav input[type=text]{
  padding: 6px;
  margin-top: 8px;
  font-size: 17px;
  border: none;
}

.topnav .search-container button {
  float: right;
  padding: 6px 10px;
  margin-top: 8px;
  margin-right: 16px;
  background: #ddd;
  font-size: 17px;
  border: none;
  cursor: pointer;
}

.topnav .search-container button:hover {
  background: #ccc;
}


.speaker {
  margin-left: .4em;
  margin-top: .3em;
  margin-bottom: -29px;
  border-radius: 50%;
  height: 3em;
  width: 3em;
}

.r.recordings {
  padding: 5px;
}

.recording {
  display: flex;
  padding: 4px;
  background-color: #F6DCDD;
  border-radius: 10px;
  margin: 20px;
}

.textnlikes {
  width: 100%;
  display:flex;
align-items:center;

}
.text {
  padding: 8px;
  font-size:18px;
  color:#665b54;
  font-family:muli;
}
.like {
  display: inline;
}
.text, .likes {
  padding: 8px;
}

.comment {
  background-color: white;
}

.avatar-md {
height:4em;
width:4em;
border-radius:50%;
margin-top:25px;
}

.avatar-sm {
  height: 2em;
  width: 2em;
  border-radius: 50%
}

.mic {
  padding-left: 10px;
  margin-left: 40px;
}